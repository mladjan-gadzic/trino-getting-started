<?xml version="1.0"?>
<configuration>

    <property>
        <name>fs.defaultFS</name>
        <value>s3a://host.docker.internal:9878</value>
    </property>


    <!-- Ozone properties -->
    <property>
        <name>fs.s3a.connection.ssl.enabled</name>
        <value>false</value>
    </property>

    <property>
        <name>fs.s3a.endpoint</name>
        <value>http://host.docker.internal:9878</value>
    </property>

    <property>
        <name>fs.s3a.access.key</name>
        <value>ozone</value>
    </property>

    <property>
        <name>fs.s3a.secret.key</name>
        <value>ozone123</value>
    </property>

    <property>
        <name>fs.s3a.path.style.access</name>
        <value>true</value>
    </property>

    <property>
        <name>fs.s3a.impl</name>
        <value>org.apache.hadoop.fs.s3a.S3AFileSystem</value>
    </property>

</configuration>
